{{ 'header.css' |  asset_url |  stylesheet_tag }}


<header class="nav-bar__container">
  <div class="nav-bar__items">
    <a href="#">
      {%  render 'icon-hamburger' %}
    </a>
    <a href="/">
      <img src="{{ section.settings.desktop_logo |  image_url: width: section.settings.desktop_logo.width }}" class="header__brand-logo">
    </a>
    <a href="{{ routes.cart_url }}" >
      {%  render 'icon-cart-bag' %} 
    </a>

  </div>
</header>

{%  schema  %} 
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "desktop_logo",
      "label": "Logo"
    }
  ]
}

{% endschema %}